doctype html
html(lang="sp")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="style.css")
        link(rel="shortcut icon", href="img/logo.png", type="image/png")
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet")
        title Taller 1 Maquetacion Web PUG
    body
        -let data =[{article: {titulo: "Lo mas reciente",header: "1",div: "2",aside: "3",p: "4" },article2: {titulo: "Novedades",header: "awd",div: "4",p: "6",footer: "7" },titulo: "Ultimas noticias"},{article: {titulo: "Lo mas reciente",header: "1",div: "2",aside: "3",p: "4" },article2: {titulo: "Novedades",header: "awd",div: "4",p: "6",footer: "7" },titulo: "Ultimas noticias"}];
        -let menu = {Principal: ["Menu 1","Menu 2","Menu 3","Menu 4"], Sub: ["Sub Menu 1","Sub Menu 2","Sub Menu 3","Sub Menu 4"]};
        script.
            console.log(!{JSON.stringify(data)});
        header
            mixin Menus({...arg})
                nav 
                    ul 
                        each valor, i in arg
                            li=valor
            +Menus(menu.Principal)
        section
            mixin Menus2({...arg})
                nav 
                    ul 
                        each valor, i in arg
                            li=valor
            +Menus2(menu.Sub)
            aside 
                img(src="img/Pruebas.jpg", alt="", srcset="")
        div(class="Caja")
            mixin sesiones({...arg})
                each valor, i in arg
                    section(class="noticias")
                        header= valor.titulo
                        article= valor.article.titulo
                            header= valor.article.header
                            div= valor.article.div
                            aside= valor.article.aside
                            p= valor.article.p
                        article= valor.article2.titulo
                            header= valor.article2.header
                            div= valor.article2.div
                            p= valor.article2.p
                            footer= valor.article2.footer
            +sesiones(data)
        footer footer
